<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ProjectDetailsActivity">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView android:id="@+id/project_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="16dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView android:id="@+id/project_name"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name" />

            <TextView android:id="@+id/project_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#318CE7"
                android:text="User" />

            <TextView android:id="@+id/project_link"
                android:layout_marginTop="4pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#318CE7"
                android:text="Click here to open project" />

            <TextView android:id="@+id/project_description"
                android:layout_marginTop="4pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>